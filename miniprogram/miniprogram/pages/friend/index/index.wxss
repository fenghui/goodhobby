.friend-item {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 40rpx;
  align-self: flex-start;
}
.friend-item .header {
  display: flex;
  flex-direction: row;
}
.friend-item .header .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
  padding: 10rpx;
}
.friend-item .header .info {
  align-self: center;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.friend-item .header .info .user-name {
  font-size: 28rpx;
}
.friend-item .header .info .pub-date {
  font-size: 20rpx;
}
.friend-item .content-text {
  font-size: 24rpx;
}
.friend-item .content-pics {
  display: flex;
  flex-wrap: wrap;
}
.friend-item .content-pics .item {
  flex-basis: 33.333%;
  padding: 5rpx;
  height: 30vw;
  box-sizing: border-box;
}
.friend-item .content-pics image {
  width: 100%;
  height: 100%;
}
.friend-item .comment {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.friend-item .comment .comment-count {
  font-size: 28rpx;
  margin: 0 10rpx;
}
